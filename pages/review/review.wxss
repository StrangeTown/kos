/* pages/review/review.wxss */
.review_container {
  padding: 20rpx 30rpx;
  background-color: #1E2227;
  min-height: 100vh;
  box-sizing: border-box;
}

.review_container .item {
  margin-bottom: 50rpx;
}
.review_container .item  {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.review_container .more {
  width: 30rpx;
  height: 30rpx;
}
.review_container .item .content .label {
  font-size: 30rpx;
  color: rgb(161, 161, 161);
}
.review_container .item .content .value {
  font-size: 40rpx;
  color: #fff;
}
.recite_nav {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background-color: #4a5563;
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 16px 4px black;
}
.recite_nav .icon {
  width: 50rpx;
  height: 50rpx;
}

.review_container .model {
  position: fixed;
  background-color: transparent;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.review_container .model .main {
  background-color: #fff;
  width: 80%;
  border-radius: 20rpx;
  box-shadow: 0 0 7px 8px #080808;
  padding: 30rpx;
  box-sizing: border-box;
}
.review_container .model .actions {
  margin-top: 40rpx;
  padding: 20rpx;
}
.review_container .model .actions .action + .action {
  margin-top: 20rpx;
}
.review_container .model .model_info {
  text-align: left;
  color: #505050;
}
