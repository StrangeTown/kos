/* pages/explore.wxss */

.explore_container {
  padding: 10rpx 30rpx;
  /* background-color: #171A26; */
  background-color: #1E2227;
  min-height: 100vh;
  box-sizing: border-box;
}

.explore_container .head {
  background: #282E3C;
  padding: 40rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.explore_container .head .list_nav {
  width: 50rpx;
}
.explore_container .list_nav .icon {
  width: 36rpx;
  height: 36rpx;
}
.explore_container .head .sentence {
  flex: 1;
  padding: 10rpx;
}
@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: #d2d2d2 }
}
.explore_container .head .sentence_val {
  color: #d2d2d2;
  border-right: 1px solid #000;
  animation: blink-caret .5s step-end infinite;
}
.explore_container .head .how_to_say {
  color: #d2d2d2;
  font-size: 24rpx;
  font-weight: lighter;
  margin-top: 30rpx;
}

.explore_container .section {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.explore_container .section .title {
  color: #d2d2d2;
  font-weight: bold;
}
.explore_container .items {
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  width: 100%;
}
.explore_container .item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.explore_container .item + .item {
  margin-left: 40rpx;
}
.explore_container .item.recite .icon {
  width: 80rpx;
  height: 80rpx;
}
.explore_container .item.collect .icon {
  width: 80rpx;
  height: 80rpx;
}
.explore_container .item.dialog .icon {
  width: 70rpx;
  height: 80rpx;
}
.explore_container .item.scene .icon {
  width: 70rpx;
  height: 70rpx;
}
.explore_container .item .icon_wrap {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  /* background-color: #3a4567; */
  background-color: #282E3C;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 10px 10px 20px 8px #14181f;
}
.explore_container .item .label {
  margin-top: 16rpx;
  color: #d2d2d2;
  font-size: 24rpx;
}


