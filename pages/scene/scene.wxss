/* pages/scene/scene.wxss */
.scene_container {
  /* padding: 10rpx 30rpx; */
  background-color: #1E2227;
  min-height: 100vh;
  box-sizing: border-box;
}
.scene_container .row {
  padding-top: 40rpx;
}
.scene_container .row_title {
  color: #ddd;
  padding-left: 20rpx;
  font-size: 24rpx;
}
.scene_container .row_content {
  margin-top: 20rpx;
  display: flex;
  overflow: auto;
  flex: 1;
}
.scene_container .scenes {
  display: flex;
  min-height: min-content;
}
.scene_container .scenes .scene {
  color: #fff;
  width: 300rpx;
  height: 500rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.scene_container .scene .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.scene_container .scene .label {
  position: absolute;
  bottom: 70rpx;
  font-weight: bold;
  text-shadow: 5px 5px 6px #000;
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scene_container .scene .sub_label {
  position: absolute;
  bottom: 30rpx;
  font-weight: light;
  font-size: 20rpx;
  color: #ddd;
}
