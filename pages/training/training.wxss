/* pages/training/training.wxss */
.training {
  height: 100vh;
  background-color: #F6CE2A;
}
.training .progress_bar {
  height: 6rpx;
  background-color: rgb(248, 211, 62);
}
.training .progress {
  height: 6rpx;
  width: 0%;
  background-color: rgb(221, 184, 36);
  transition: width 0.2s;
}
